<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menu.Lineralayout" parent="">
        <!-- 主界面小菜单布局 -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="menu.Image" parent="">
        <!-- 主界面小菜单图片 -->
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">#00ff0000</item>
    </style>

    <style name="menu.text" parent="">
        <!-- 主界面小菜单文字 -->
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="menu.view" parent="">
        <!-- 主界面view的样式 -->
        <item name="android:background">#f0f0f0</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
    </style>

    <style name="AppBaseTheme" parent="AppTheme" />

    <style name="TitleBarText" parent="AppBaseTheme">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="SubHeadTextGray" parent="AppBaseTheme">
        <item name="android:textColor">#ffb5b6b6</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PageHeaderShadow" parent="AppBaseTheme">
        <item name="android:background">@drawable/bg_header_shadow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="BtnMainFuncText" parent="AppBaseTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="CourseListTextTitle" parent="AppBaseTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
    </style>

    <style name="CourseListTextGray" parent="AppBaseTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="GradeHeadKeyText" parent="AppBaseTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="GradeHeadValText" parent="AppBaseTheme">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>


    <style name="custom_title_background">
        <item name="android:background">#2c78d7</item>
    </style>

    <style name="custom_title" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/custom_title_background</item>
    </style>

    <style name="basicText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="courseTableText">
        <item name="android:textColor">#4b3b85</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="statusListItemText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="errorReportItemText">
        <item name="android:textColor">#b8a5a5</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

</resources>
